#include <stdio.h>
#include <stdlib.h>

#define SIZE 10

int hash_table[SIZE];

void init_hash_table() {
    int i;
    for (i = 0; i < SIZE; i++) {
        hash_table[i] = -1;
    }
}

void display() {
    int i;
    printf("Index\tValue\n");
    for (i = 0; i < SIZE; i++) {
        printf("%d\t%d\n", i, hash_table[i]);
    }
}

void insert(int value) {
    int index = value % SIZE;
    int i = index;
    while (hash_table[i] != -1) {
        i = (i + 1) % SIZE;
        if (i == index) {
            printf("Hash table is full\n");
            return;
        }
    }
    hash_table[i] = value;
}

void search(int value) {
    int index = value % SIZE;
    int i = index;
    while (hash_table[i] != value) {
        i = (i + 1) % SIZE;
        if (i == index || hash_table[i] == -1) {
            printf("%d not found in hash table\n", value);
            return;
        }
    }
    printf("%d found at index %d\n", value, i);
}

void delete(int value) {
    int index = value % SIZE;
    int i = index;
    while (hash_table[i] != value) {
        i = (i + 1) % SIZE;
        if (i == index || hash_table[i] == -1) {
            printf("%d not found in hash table\n", value);
            return;
        }
    }
    hash_table[i] = -1;
    printf("%d deleted from hash table\n", value);
}

int main() {
    init_hash_table();
    int choice, value;
    while (1) {
        printf("\n1. Insert\n2. Search\n3. Delete\n4. Display\n5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter the value to insert: ");
                scanf("%d", &value);
                insert(value);
                break;
            case 2:
                printf("Enter the value to search: ");
                scanf("%d", &value);
                search(value);
                break;
            case 3:
                printf("Enter the value to delete: ");
                scanf("%d", &value);
                delete(value);
                break;
            case 4:
                display();
                break;
            case 5:
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
